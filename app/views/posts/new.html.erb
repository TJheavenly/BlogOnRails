<h1>新しい投稿</h1>
<div class="container">
  <div class="row">
    <div class="col-md">
      <%= form_with model: @post, local: true do |form| %>
        <div class="form-group">
          <%= form.label :title %><br>
          <%= form.text_field :title %>
        </div>
        <div class="form-group">
          <%= form.label :context %><br>
          <%= form.text_area :context %>
        </div>
        <p>
          <%= form.submit %>
        </p> 
      <% end %>
      <%= link_to 'ホーム', posts_path %>
    </div>
  </div>
</div>

