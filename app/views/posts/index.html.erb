<h1>投稿一覧<h1>
<h3><%= link_to '投稿する' , new_post_path %></h3>
<br>
<table class="table">
  <thead>
      <tr>
        <th></th>
        <th>タイトル</th>
        <th>内容</th>
      </tr>
  </thead>
  <tbody>
      <% @posts.each do |post| %>
        <tr>
            <th scope="row"><%= post.id %></th>
            <td><%= post.title %></td>
            <td><%= post.context %></td>
            <td><%= link_to '詳細', post_path(post) %></td>
            <td><%= link_to '編集', edit_post_path(post) %></td>
        </tr>
      <% end %>
  </tbody>
</table>
