<%= render 'top' %>

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">Post Title</h1>

        <!-- Author -->
        <p class="lead">
          by
          <a href="#">Start Bootstrap</a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on January 1, 2019 at 12:00 PM</p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">

        <hr>
        <p><%= @post.id %></p>
        <p><%= @post.title %></p>
        <p><%= @post.context %></p>
        <!-- Post Content -->
        <hr>

      </div>

      <%= render 'side' %>
    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <%= render 'footer'%>
</body>

</html>
